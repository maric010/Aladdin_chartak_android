<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navv"
    android:layout_width="wrap_content"
    android:layout_marginTop="22dp"
    android:layout_marginLeft="7dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/pozivnoy"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="ID:"
            android:textColor="#009688"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Баланс"
            android:textColor="#009688"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/rounded2"
                android:onClick="operator_tel_b"
                android:scaleType="fitCenter"
                android:contentDescription="test"
                app:srcCompat="@drawable/operator"
                tools:ignore="VectorDrawableCompat" />
            <TextView
                android:id="@+id/lang_dispetcher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Диспетчеры"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="86dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="75dp"
                android:layout_height="65dp"
                android:background="@drawable/rounded2"
                android:onClick="trevoga"
                android:layout_marginLeft="7dp"
                android:contentDescription="test"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/police" />
            <TextView
                android:id="@+id/lang_sos"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:text="Тревога"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:divider="@null"
        android:orientation="vertical"
        android:showDividers="none">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="#103753"
            android:onClick="zakaz"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="220dp"
                android:layout_gravity="center"
                android:layout_height="55dp"
                android:onClick="zakaz"
                android:layout_marginTop="5dp"
                android:text="Aladdin driver"
                android:textAlignment="center"
                android:fontFamily="@font/aladdin2"
                android:textColor="@color/white"
                android:textSize="27dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:divider="@null"
            android:dividerPadding="0dp"
            android:orientation="horizontal"
            android:showDividers="none">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lang_regions"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:onClick="regions"
                android:text="  🗺  Районы"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="21dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lang_pre_orders"
                android:layout_width="250dp"
                android:layout_marginTop="5dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:onClick="pred_zakaz_menu"
                android:text="  ⏰  Предзаказы"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lang_sms"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:onClick="fragment9"
                android:text="  📨  Сообщения"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="21dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lang_history"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:onClick="history"
                android:layout_marginTop="5dp"
                android:text="  💼  История"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="21dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cabinet"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:onClick="fragment8"
                android:layout_marginTop="5dp"
                android:text="  👨🏻‍✈️  Личный Кабинет"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lang_settings"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:onClick="fragment5"
                android:text="  🛠  Настройки"
                android:layout_marginTop="5dp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="21dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/lang_exit2"
                and="@style/Widget.AppCompat.Spinner.DropDown.ActionBar"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:background="#E4E1E1"
                android:layout_marginTop="5dp"
                android:onClick="app_close"
                android:clickable="true"
                android:text="  ⛔️  Выйти"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>